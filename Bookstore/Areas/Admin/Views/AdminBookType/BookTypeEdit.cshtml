@model Bookstore.Entity.TbBookType

@{
    Layout = null;
}

<h3 class="text-warning">Cập nhật thể loại sách</h3>
<hr />
<form asp-action="BookTypeEdit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="TypeId" />
    <div class="row">
        <div class="col-6 form-group">
            <label class="control-label fw-bold">Tên thể loại</label>
            <br />
            <input asp-for="TypeName" class="form-control" />
            <span asp-validation-for="TypeName" class="text-danger"></span>
        </div>
        <div class="form-group col-6 d-flex align-items-center">
            <div class="switch m-r-10">
                <input asp-for="Status" type="checkbox" id="switch-1">
                <label for="switch-1"></label>
            </div>
            <label>Trạng thái</label>
        </div>
    </div>
    <br />
    <div class="form-group">
        <label class="control-label">Ảnh</label>
        <input asp-for="Thumb" name="fthumb" type="file" class="form-control-file" />
        <span asp-validation-for="Thumb" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Lưu" class="btn btn-warning m-r-5" />
    </div>
</form>

