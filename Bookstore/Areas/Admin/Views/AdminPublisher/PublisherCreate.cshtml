@model Bookstore.Entity.TbPublisher

@{
    Layout = null;
}

<h3 class="text-primary">Thêm nhà xuất bản</h3>
<hr />
<form asp-controller="AdminPublisher" asp-action="PublisherCreate" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-6 form-group">
            <label class="control-label fw-bold">Tên nhà xuất bản</label>
            <br />
            <input asp-for="PublisherName" class="form-control" />
            <span asp-validation-for="PublisherName" class="text-danger"></span>
        </div>
        <div class="form-group col-6 d-flex align-items-center">
            <div class="switch m-r-10">
                <input asp-for="Status" type="checkbox" id="switch-1" checked="">
                <label for="switch-1"></label>
            </div>
            <label>Trạng thái</label>
        </div>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Thêm" class="btn btn-primary" />
    </div>
</form>

