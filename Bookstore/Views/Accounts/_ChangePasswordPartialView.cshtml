@model Bookstore.ModelViews.ChangePasswordVM



<div class="myaccount-details">
    <form asp-controller="Accounts" asp-action="ChangePassword" method="post" class="myaccount-form">
        <div class="myaccount-form-inner">
            <div class="single-input">
                <label>
                    Mật khẩu hiện tại
                </label>
                <input type="password" asp-for="PasswordNow">
            </div>
            <div class="single-input">
                <label>
                    Mật khẩu mới
                </label>
                <input type="password" asp-for="Password">
            </div>
            <div class="single-input">
                <label>Nhập lại mật khẩu mới</label>
                <input type="password" asp-for="ConfirmPassword">
            </div>
            <div class="single-input">
                <button class="btn btn-custom-size lg-size btn-secondary btn-primary-hover rounded-0" type="submit">
                    <span>Lưu</span>
                </button>
            </div>
        </div>
    </form>
</div>
